generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId           Int      @id @default(autoincrement())
  email            String   @unique
  password         String
  username         String
  profilePictureId Int?
  teamId           Int?
  projectId        Int?
  resetPasswordOTP String?
  otpExpires       String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
